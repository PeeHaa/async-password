{
  "name": "Peehaa/async-password",
  "description": "Simple utility library which makes the native password_* API async friendly",
  "keywords": ["amphp", "async", "password"],
  "license": "MIT",
  "authors": [
    {
      "name": "Pieter Hordijk",
      "email": "info@pieterhordijk.com",
      "homepage": "https://pieterhordijk.com",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "~7.1",
    "amphp/process": "^0.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^6"
  },
  "autoload": {
    "files": ["src/functions.php"],
    "psr-4": {
      "PeeHaa\\AsyncPassword\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PeeHaa\\AsyncPasswordTests\\": "tests/"
    }
  }
}
